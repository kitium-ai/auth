{
  "name": "@kitiumai/auth",
  "version": "3.0.1",
  "description": "Complete authentication solution with OAuth, API keys, email, SAML, and subscription management",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "typecheck": "tsc -b --noEmit",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "changeset": "ensure-changeset && changeset",
    "version": "ensure-changeset && changeset version",
    "publish:set-token": "set-npm-token",
    "publish:setup": "set-npm-token",
    "publish:check": "npm whoami --registry https://registry.npmjs.org || npm login --registry https://registry.npmjs.org",
    "publish:login": "npm login --registry https://registry.npmjs.org",
    "publish:package": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:otp": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org --otp",
    "publish:dry-run": "pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "publish:dry-run:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "release": "pnpm version && pnpm install --lockfile-only"
  },
  "keywords": [
    "auth",
    "oauth",
    "authentication",
    "email-auth",
    "saml",
    "api-keys",
    "subscription",
    "typescript",
    "kitium"
  ],
  "author": "KitiumAI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitium-ai/auth.git"
  },
  "bugs": {
    "url": "https://github.com/kitium-ai/auth/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@kitiumai/error": "^1.0.0",
    "@kitiumai/logger": "1.5.0",
    "@kitiumai/types": "^1.0.0",
    "@kitiumai/utils-ts": "^1.0.0",
    "argon2": "^0.31.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fast-xml-parser": "^4.3.5",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "ora": "^7.0.1",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "@kitiumai/config": "^1.0.2",
    "@kitiumai/lint": "^1.3.5",
    "@kitiumai/scripts": "^0.2.1",
    "@kitiumai/vitest-helpers": "^1.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/react": "^18.2.0",
    "@types/speakeasy": "^2.0.9",
    "eslint": "^9.15.0",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsup": "7.2.0",
    "typescript": "^5.2.2"
  },
  "pnpm": {
    "overrides": {
      "read-pkg-up": "^11.0.0",
      "semver-diff": "^4.0.0",
      "source-map": "^0.7.4",
      "lodash.get": "^4.4.2",
      "rimraf": "^5.0.5",
      "glob": "^9.3.5",
      "gauge": "^4.0.4",
      "subscriptions-transport-ws": "0.11.0",
      "are-we-there-yet": "^3.0.0"
    }
  }
}
