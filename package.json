{
  "name": "@kitiumai/auth",
  "version": "3.0.3",
  "description": "Enterprise-grade authentication solution with OAuth2, API keys, email verification, SAML2, SSO, WebAuthn, 2FA, RBAC, and subscription management",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.mjs",
      "require": "./dist/core.js"
    },
    "./errors": {
      "types": "./dist/errors.d.ts",
      "import": "./dist/errors.mjs",
      "require": "./dist/errors.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.mjs",
      "require": "./dist/config.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "CODE_OF_CONDUCT.md",
    "CONTRIBUTING.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage --passWithNoTests",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "typecheck": "tsc -b --noEmit",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "changeset": "ensure-changeset && changeset",
    "version": "ensure-changeset && changeset version",
    "publish:set-token": "set-npm-token",
    "publish:setup": "set-npm-token",
    "publish:check": "npm whoami --registry https://registry.npmjs.org || npm login --registry https://registry.npmjs.org",
    "publish:login": "npm login --registry https://registry.npmjs.org",
    "publish:package": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:otp": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org --otp",
    "publish:dry-run": "pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "publish:dry-run:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "release": "pnpm version && pnpm install --lockfile-only"
  },
  "keywords": [
    "auth",
    "authentication",
    "authorization",
    "identity",
    "identity-management",
    "identity-provider",
    "oauth",
    "oauth2",
    "openid",
    "oidc",
    "saml",
    "saml2",
    "sso",
    "single-sign-on",
    "email-auth",
    "email-verification",
    "api-keys",
    "api-authentication",
    "sessions",
    "session-management",
    "webauthn",
    "fido2",
    "2fa",
    "two-factor-auth",
    "mfa",
    "multi-factor-auth",
    "totp",
    "time-based-otp",
    "rbac",
    "role-based-access-control",
    "access-control",
    "permissions",
    "security",
    "encryption",
    "password-hashing",
    "jwt",
    "json-web-token",
    "subscription",
    "billing",
    "enterprise",
    "typescript",
    "nodejs",
    "node",
    "kitium",
    "kitiumai"
  ],
  "author": "KitiumAI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitium-ai/auth.git"
  },
  "bugs": {
    "url": "https://github.com/kitium-ai/auth/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@kitiumai/error": "^2.0.0",
    "@kitiumai/logger": "^2.0.0",
    "@kitiumai/types": "^2.0.0",
    "@kitiumai/utils-ts": "^2.0.1",
    "argon2": "^0.31.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fast-xml-parser": "^4.3.5",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "ora": "^7.0.1",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "@kitiumai/config": "^2.0.0",
    "@kitiumai/lint": "^2.0.0",
    "@kitiumai/scripts": "^1.0.0",
    "@kitiumai/vitest-helpers": "^2.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.6.0",
    "@types/react": "^18.2.0",
    "@types/speakeasy": "^2.0.9",
    "@vitest/coverage-v8": "^2.1.3",
    "eslint": "^9.15.0",
    "express": "^4.18.2",
    "rimraf": "^5.0.5",
    "tsup": "7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^2.0.0"
  },
  "pnpm": {
    "overrides": {
      "read-pkg-up": "^11.0.0",
      "semver-diff": "^4.0.0",
      "source-map": "^0.7.4",
      "lodash.get": "^4.4.2",
      "rimraf": "^5.0.5",
      "glob": "^9.3.5",
      "gauge": "^4.0.4",
      "subscriptions-transport-ws": "0.11.0",
      "are-we-there-yet": "^3.0.0"
    }
  }
}
